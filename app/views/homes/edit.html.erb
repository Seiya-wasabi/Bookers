<h1>Editting Book</h1>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
<%= form_with model:@book, url:"/homes/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<p>
<%= link_to("Show", "/homes/#{@book.id}")%> | <a href ="/homes/index">Back</a>
</p>