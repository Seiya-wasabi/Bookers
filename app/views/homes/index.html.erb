<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <!-----------ここまでタイトルの横軸------------>
  <tbody>
    <% @books.each do |b| %>
    <tr>
      <td><%= b.title %></td>
      <td><%= b.body %></td>
      <td><%= link_to "Show", home_path(b) %></td>
      <td><%= link_to "Edit", edit_home_path(b) %></td>
      <td><%= link_to "Destroy", destroy_book_path(b), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class ="new">
  <h2>New book</h2>
  <div class ="error">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
  </div>

  <%= form_with model:@book, url: "/homes/:id",local:true do |f| %>
  <div class = "form">
  <p class = "text1">Title</p>
  <%= f.text_field :title %>
  </div>
  <div class = "form">
  <p class= "text1">Body</p>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>
</body>
</html>